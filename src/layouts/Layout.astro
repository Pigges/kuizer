---
import '../styles/global.scss';

import { ViewTransitions } from 'astro:transitions';
import LoadingIndicator from "astro-loading-indicator/component"

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<LoadingIndicator color="#7e22ce" />
	</head>
	<body class="has-dotted-background">
		<Header/>
		<main transition:animate="fade" class="is-flex-grow-1">
			<slot />
		</main>
		<Footer/>
	</body>
</html>
<style>
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
<script>
	let root = document.documentElement;
    
	root.addEventListener('mousemove', e => {
	  root.style.setProperty('--mouse-x', -Math.round(((e.clientX - window.innerWidth/2) / window.innerWidth/2) * 100) + "%");
	  root.style.setProperty('--mouse-y', -Math.round(((e.clientY - window.innerHeight/2) / window.innerHeight/2) * 100) + "%");
	});
</script>